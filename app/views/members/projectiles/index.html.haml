- content_for :title do
  Projectiles

%p#newLink= link_to "New Projectile", new_members_projectile_path

%div#status

%ul
  - for projectile in @projectile
    %li
      = image_tag projectile.photo.url(:small)
      = link_to projectile.name, members_projectile_path(projectile)
      by 
      = projectile.user
      (
      = pluralize( projectile.cost, 'ArmadaBuck')
      )
      = link_to image_tag("icon_small_show.png"), members_projectile_path(projectile)
      - form_remote_for :favorite, :url => favorites_path, :method => form_method do |f| 
        = f.hidden_field :projectile_id, :value => projectile.id
        = f.hidden_field :user_id, :value => current_user.id
        = image_submit_tag( 'icon_small_star_inactive.png', :id => 'img_' + projectile.id.to_s)
      %div{:id => 'status_' + projectile.id.to_s}
      %p= h projectile.description
      - permitted_to? :edit, :projectile do
        = link_to 'Edit', edit_members_projectile_path(projectile)
        = link_to 'Destroy', members_projectile_path(projectile), :confirm => 'Are you sure?', :method => :delete

